<div class="panel panel-default">
	<div class="panel-heading">平台组管理</div>
	<div class="panel-body">
  			<div class="col-md-12"><!-- 查询开始 -->
  				<div class="col-md-2">
                   	<div class="form-group">
				    	<input type="text" placeholder="平台组名称" ng-model="querycontent.platformGroupName" class="form-control">
                    </div>
       			</div>
				<div class="col-md-2">
                   	<div class="form-group">
				    	<input type="text" placeholder="公司id" ng-model="querycontent.companyId" class="form-control">
                    </div>
       			</div>
       			<div class="col-md-3">
					<div class="form-group">
						<button class="btn btn-info" type="button" ng-click="query()">查询</button>
						<button class="btn btn-info" type="button" data-toggle="modal" data-target="#myModal" ng-click="cleanData()">新增</button>
					</div>
       			</div>
	        </div>
	        <div class="col-md-12"> <!-- grid开始 -->
            	<table class="table table-striped table-bordered">
              	   	<thead>
				      	<tr>
					         <th class="col-xs-1" align="center">平台组id</th>
					         <th class="col-xs-1" align="center">平台组名称</th>
					         <th class="col-xs-1" align="center">平台id</th>
					         <th class="col-xs-1" align="center">平台名称</th>
					         <th class="col-xs-1" align="center">公司id</th>
					         <th class="col-xs-1" align="center">操作</th>
				      	</tr>
			    	</thead>
				 	<tbody>
					  	<tr ng-repeat="e in platform_group_list">
 					      <td class="col-xs-1" align="left">{{e.platformGroupId}}</td>
					      <td class="col-xs-1" align="left">{{e.platformGroupName}}</td>
					      <td class="col-xs-1" align="left">{{e.platformId}}</td>
					      <td class="col-xs-1" align="left">{{e.platformName}}</td>
					      <td class="col-xs-1" align="left">{{e.companyId}}</td>
					      <td class="col-xs-1" align="left"><button class="btn btn-info" type="button" data-toggle="modal" data-target="#myModifyModal"  ng-click="editData(e.platformGroupId,e.platformGroupName)">修改</button></td>
					  	</tr>
				  		<tr ng-show="hasResult">
				      		<td class="col-xs-12" colspan ="9" align="left" width="100%">没有查询到符合条件的数据</td>
				  		</tr>
			  		</tbody>
				</table>
           </div><!-- grid结束 -->
	</div>
</div>

<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="panel panel-default" style="margin-bottom:0px;padding-bottom:0px;">
				<div class="panel-heading">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						新增平台组
					</div>
					<div class="panel-body" >
						<div class="row">
			  				<div class="form-group col-md-12" >
								<label class="col-sm-4 control-label">平台组名称:</label>
									<div class="col-sm-6 input-group">
										<input type="text" ng-model="addplatformGroup.platformGroupName" class="form-control" />
									</div>
							</div>
			       		</div>
			       		<div class="col-md-12"> <!-- grid开始 -->
			            	<table class="table table-striped table-bordered">
			              	   	<thead>
							      	<tr>
							      		 <th class="col-xs-1" align="center"><input type="checkbox" id="topCheckBox" value="" ng-click="allcheck()"></th>
								         <th class="col-xs-1" align="center">平台id</th>
								         <th class="col-xs-1" align="center">平台名称</th>
							      	</tr>
						    	</thead>
							 	<tbody>
								  	<tr ng-repeat="e in platform_list">
								  	  <td class="col-xs-1" align="left"><input type="checkbox" name="platform" id="childCheckBox" value="{{e.id}}"></td>
								      <td class="col-xs-1" align="left">{{e.id}}</td>
								      <td class="col-xs-1" align="left">{{e.platformName}}</td>
								  	</tr>
						  		</tbody>
							</table>
           				</div><!-- grid结束 -->
			       		<div class="col-md-12 text-center">
							<button class="btn btn-info" type="button" ng-click="savePlatformGroup()">保存</button>
							<button type="button" class="btn btn-info" data-dismiss="modal" aria-hidden="true">关闭</button>
						</div>
					</div>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal -->
</div>

<!-- 模态框（Modal） -->
<div class="modal fade" id="myModifyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="panel panel-default" style="margin-bottom:0px;padding-bottom:0px;">
				<div class="panel-heading">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						修改平台组
					</div>
					<div class="panel-body" >
						<div class="row">
							<input type="hidden" ng-model="mdfplatformGroup.platformGroupId" class="form-control" />
							<div class="form-group col-md-12" >
								<label class="col-sm-4 control-label">平台组名称:</label>
									<div class="col-sm-6 input-group">
										<input type="text" ng-model="mdfplatformGroup.platformGroupName" class="form-control" />
									</div>
							</div>
							<div class="col-md-12"> <!-- grid开始 -->
			            	<table class="table table-striped table-bordered">
			              	   	<thead>
							      	<tr>
							      		 <th class="col-xs-1" align="center"><input type="checkbox" id="topCheckBox1" value="" ng-click="allcheck1()"></th>
								         <th class="col-xs-1" align="center">平台id</th>
								         <th class="col-xs-1" align="center">平台名称</th>
							      	</tr>
						    	</thead>
							 	<tbody>
								  	<tr ng-repeat="e in platform_list_1">
								  	  <td class="col-xs-1" align="left">
								  	  	<input type="checkbox" ng-if="e.isCheck==1" name="platform1" value="{{e.id}}" checked="checked">
								  	  	<input type="checkbox" ng-if="e.isCheck!=1" name="platform1" value="{{e.id}}">
								  	  </td>
								      <td class="col-xs-1" align="left">{{e.id}}</td>
								      <td class="col-xs-1" align="left">{{e.platformName}}</td>
								  	</tr>
						  		</tbody>
							</table>
           				</div><!-- grid结束 -->
							<div class="col-md-12 text-center">
								<button class="btn btn-info" type="button" ng-click="modifyPlatformGroup()">保存</button>
								<button type="button" class="btn btn-info" data-dismiss="modal" aria-hidden="true">关闭</button>
							</div>
						</div>
					</div>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal -->
</div>