<div class="wrapper-md bg-light b-b headerPadding"  id="container">
	<h1 class="m-n font-thin h3">
		<a href="">权限管理</a>&gt;<a href="">权限配置</a>
	</h1>
</div>

<div class="wrapper-md">
    <div class="col-sm-4 b-b b-l b-r b-t" style="background: #fff; padding: 20px 0">
		 <div class="col-sm-5">
			<select class="form-control" ng-options="platform as platform.platformName for platform in platforms"
						ng-change = "changePlatform()"
						ng-model="platform">
				<option value="">所属平台</option>
			</select>
		 </div>
		 <div class="col-sm-7">
			 <a class="input-group">
				<input class="form-control ng-pristine ng-valid" ng-model="input.keyword"  style="width: 80%;" type="text">
				<span class="input-group-btn" style="float:left">
					<button type="submit" class="btn btn-default" ng-click="changeColor('treeDemo','name',input.keyword)">
						<i class="glyphicon glyphicon-search fa fa-search"></i>
					</button>
				</span>
			 </a>
		 </div>
		 <div >
			 <ul id="treeDemo" class="ztree" style="width: 100%;height: 605px;overflow-y:auto;">
			</ul>
		 </div>
	</div>
	<div class="col-sm-8">
		<div class="panel panel-default">
			<div class="panel-heading font-bold">新增下级功能</div>
            <div class="panel-body">
           		<form class="form-horizontal" novalidate autocomplete="off">
          		<!-- <form class="form-horizontal" ng-submit="submitted = true;addFunctionBtn();" novalidate autocomplete="off"> -->
					<div class="form-group">
						<label class="col-sm-2 control-label">权限代码：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="addfunction.code">
						</div>
						<label class="col-sm-2 control-label">权限名称：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="addfunction.name">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">权限层级：</label>
						<div class="col-sm-4">
							<select class="form-control" ng-model="addfunction.level">
					        	<option value="1">一级</option>
					            <option value="2">二级</option>
					            <option value="3">三级</option>
					            <option value="4">四级</option>
					            <option value="5">五级</option>
					            <option value="6">六级</option>
					            <option value="7">七级</option>
					            <option value="8">八级</option>
					        </select>
						</div>
						<label class="col-sm-2 control-label">权限类型：</label>
						<div class="col-sm-4">
							<select class="form-control" ng-model="addfunction.type">
					        	<option value="1">菜单</option>
					            <option value="2">按钮</option>
					            <option value="3">资源</option>
					        </select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">上级代码：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="addfunction.parentCode" readonly="readonly">
						</div>
						<label class="col-sm-2 control-label">上级名称：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="addfunction.parentName" readonly="readonly">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">作用域：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="addfunction.domain">
						</div>
						<label class="col-sm-2 control-label">路径：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="addfunction.path">
						</div>
					</div>
				</form>
				<div class="text-center ">
					<button class="btn btn-info" ng-click="addFunctionBtn();" ng-disabled="disabled">保存</button>
				</div>

            </div>
        </div>
        <div class="panel panel-default">
        	<div class="panel-heading font-bold">修改功能</div>
            <div class="panel-body">
            	<form class="form-horizontal"  novalidate autocomplete="off">
            	<!-- <form class="form-horizontal" ng-submit="submitted = true;editFunction();" novalidate autocomplete="off"> -->
					<div class="form-group">
						<label class="col-sm-2 control-label">权限代码：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="editfunction.code">
						</div>
						<label class="col-sm-2 control-label">权限名称：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="editfunction.name">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">权限层级：</label>
						<div class="col-sm-4">
							<select class="form-control" ng-model="editfunction.level">
					        	<option value="1">一级</option>
					            <option value="2">二级</option>
					            <option value="3">三级</option>
					            <option value="4">四级</option>
					            <option value="5">五级</option>
					            <option value="6">六级</option>
					            <option value="7">七级</option>
					            <option value="8">八级</option>
					        </select>
						</div>
						<label class="col-sm-2 control-label">权限类型：</label>
						<div class="col-sm-4">
							<select class="form-control" ng-model="editfunction.type">
					        	<option value="1">菜单</option>
					            <option value="2">按钮</option>
					            <option value="3">资源</option>
					        </select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">上级代码：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="editfunction.parentCode">
						</div>
						<!-- <label class="col-sm-2 control-label">上级名称：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="editfunction.parentName" readonly="readonly">
						</div> -->
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">作用域：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="editfunction.domain">
						</div>
						<label class="col-sm-2 control-label">路径：</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" autocomplete="off" ng-model="editfunction.path">
						</div>
					</div>
				</form>
				<div class="text-center ">
						<button class="btn btn-info" ng-click="editFunctionBtn();" ng-disabled="editdisabled">修改</button>
				</div>
            </div>
        </div>
	</div>